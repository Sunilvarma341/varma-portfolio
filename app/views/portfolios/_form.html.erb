

<%= form_for(@portfolio_item) do |f| %>
    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    
    <div class="field">
        <%= f.label :subtitle %>
        <%= f.text_area :subtitle %>
    </div>

    <div class="field">
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>

    <div class="field">
        <%= f.label :thumb_image %>
        <%= f.text_area :thumb_image %>
    </div> 
       
    <ul>
    <%= f.fields_for :technologies do |technology_from| %>
        <li> 
            <%= technology_from.label :name %>
            <%= technology_from.text_field :name %>
        </li>
    <% end %>
    </ul>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>

